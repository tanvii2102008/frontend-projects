<script>
const donationData=[{id:1,donor:"Alex Johnson",amount:250,date:"2023-10-15",method:"credit-card"},{id:2,donor:"Maria Garcia",amount:100,date:"2023-10-14",method:"paypal"},{id:3,donor:"Robert Chen",amount:500,date:"2023-10-14",method:"bank-transfer"},{id:4,donor:"Sarah Williams",amount:75,date:"2023-10-13",method:"credit-card"},{id:5,donor:"James Miller",amount:1200,date:"2023-10-12",method:"bank-transfer"},{id:6,donor:"Emma Davis",amount:50,date:"2023-10-11",method:"paypal"},{id:7,donor:"Thomas Wilson",amount:300,date:"2023-10-10",method:"credit-card"},{id:8,donor:"Olivia Brown",amount:150,date:"2023-10-09",method:"credit-card"},{id:9,donor:"David Taylor",amount:80,date:"2023-10-08",method:"paypal"},{id:10,donor:"Sophia Martinez",amount:650,date:"2023-10-07",method:"bank-transfer"},{id:11,donor:"Michael Anderson",amount:45,date:"2023-10-06",method:"credit-card"},{id:12,donor:"Jennifer Lee",amount:120,date:"2023-10-05",method:"paypal"}];
const monthlyTrendData={labels:["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"],donations:[32500,29800,41200,38000,45600,41500,50300,47200,48500,42580,0,0]};
document.getElementById('current-date').textContent=new Date().toLocaleDateString('en-US',{year:'numeric',month:'long',day:'numeric'});
function updateMetrics(){const totalDonations=donationData.reduce((sum,donation)=>sum+donation.amount,0);const donorCount=new Set(donationData.map(d=>d.donor)).size;const averageDonation=totalDonations/donationData.length;document.getElementById('total-donations').textContent=`$${totalDonations.toLocaleString()}`;document.getElementById('donor-count').textContent=donorCount;document.getElementById('average-donation').textContent=`$${averageDonation.toFixed(2)}`;}
function populateDonationsTable(data){const tableBody=document.getElementById('donations-table-body');tableBody.innerHTML='';data.forEach(donation=>{const row=document.createElement('tr');const dateObj=new Date(donation.date);const formattedDate=dateObj.toLocaleDateString('en-US',{month:'short',day:'numeric',year:'numeric'});let methodText='';let methodClass='';switch(donation.method){case'credit-card':methodText='Credit Card';methodClass='credit-card';break;case'paypal':methodText='PayPal';methodClass='paypal';break;case'bank-transfer':methodText='Bank Transfer';methodClass='bank-transfer';break;}
row.innerHTML=`<td class="donor-name">${donation.donor}</td><td class="donation-amount">$${donation.amount.toLocaleString()}</td><td class="donation-date">${formattedDate}</td><td><span class="donation-method ${methodClass}">${methodText}</span></td>`;tableBody.appendChild(row);});}
let donationChart;function initChart(){const ctx=document.getElementById('donationChart').getContext('2d');donationChart=new Chart(ctx,{type:'line',data:{labels:monthlyTrendData.labels,datasets:[{label:'Monthly Donations ($)',data:monthlyTrendData.donations,borderColor:'#3498db',backgroundColor:'rgba(52,152,219,0.1)',borderWidth:3,fill:true,tension:0.2,pointBackgroundColor:'#3498db',pointBorderColor:'#ffffff',pointBorderWidth:2,pointRadius:5}]},options:{responsive:true,maintainAspectRatio:false,plugins:{legend:{display:true,position:'top',labels:{font:{size:14}}},tooltip:{mode:'index',intersect:false,callbacks:{label:function(context){return`$${context.parsed.y.toLocaleString()}`}}}},scales:{y:{beginAtZero:true,grid:{color:'rgba(0,0,0,0.05)'},ticks:{callback:function(value){return'$'+value.toLocaleString()}}},x:{grid:{color:'rgba(0,0,0,0.05)'}}}}});document.getElementById('donationChart').parentNode.style.height='300px';}
document.querySelectorAll('.filter-btn').forEach(button=>{button.addEventListener('click',function(){document.querySelectorAll('.filter-btn').forEach(btn=>btn.classList.remove('active'));this.classList.add('active');const filter=this.dataset.filter;let filteredData=[...donationData];if(filter==='recent'){const oneWeekAgo=new Date();oneWeekAgo.setDate(oneWeekAgo.getDate()-7);filteredData=donationData.filter(donation=>{const donationDate=new Date(donation.date);return donationDate>=oneWeekAgo;});}else if(filter==='large'){filteredData=donationData.filter(donation=>donation.amount>=500);}
populateDonationsTable(filteredData);});});
document.getElementById('export-btn').addEventListener('click',function(){alert("Export functionality would download a CSV file with all donation data.");});
updateMetrics();populateDonationsTable(donationData);initChart();
</script>
